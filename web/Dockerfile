FROM centos:7

# Install & Add repo
RUN rpm -Uvh https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm
RUN rpm -Uvh http://rpms.famillecollet.com/enterprise/remi-release-7.rpm

# Install Apache
RUN yum -y install httpd

# Install PHP7
RUN yum -y install â€”enablerepo=remi-php70 php php-mcrypt php-cli php-common php-devel php-gd php-mbstring php-mysqlnd php-opcache php-pdo php-pear php-xml

# Clear yum cache
RUN yum clean all

# PORT
EXPOSE 80
EXPOSE 443

# EXEC FOREGROUND
CMD /usr/sbin/httpd -DFOREGROUND
